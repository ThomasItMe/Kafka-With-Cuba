<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://messageKafkaBrowse.caption"
        focusComponent="messageKafkasTable"
        messagesPack="com.company.kafkawithcuba.web.screens.messagekafka">
    <data readOnly="true">
        <collection id="messageKafkasDc"
                    class="com.company.kafkawithcuba.entity.MessageKafka">
            <view extends="_local"/>
            <loader id="messageKafkasDl">
                <query>
                    <![CDATA[select e from kafkawithcuba_MessageKafka e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="messageKafkasTable"
            spacing="true">
        <filter id="filter"
                applyTo="messageKafkasTable"
                dataLoader="messageKafkasDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="messageKafkasTable"
                    width="100%"
                    dataContainer="messageKafkasDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="stt"/>
                <column id="comment"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="messageKafkasTable.create"/>
                <button id="editBtn" action="messageKafkasTable.edit"/>
                <button id="removeBtn" action="messageKafkasTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
